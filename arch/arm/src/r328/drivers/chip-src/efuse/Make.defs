# Include EFUSE support

ifeq ($(CONFIG_DRIVERS_EFUSE),y)


# Include build support

DEPPATH+=--dep-path drivers$(DELIM)chip-src$(DELIM)efuse
VPATH+=:chip$(DELIM)drivers$(DELIM)chip-src$(DELIM)efuse

ARCH_SRC:=$(TOPDIR)$(DELIM)arch$(DELIM)$(CONFIG_ARCH)$(DELIM)src
ARCH_INC:=$(TOPDIR)$(DELIM)arch$(DELIM)$(CONFIG_ARCH)$(DELIM)include
ARCH_CUR_SRC_PATH:=$(ARCH_SRC)$(DELIM)$(CONFIG_ARCH_CHIP)$(DELIM)drivers$(DELIM)chip-src$(DELIM)efuse


CFLAGS+=${shell $(INCDIR) $(INCDIROPT) "$(CC)" $(ARCH_CUR_SRC_PATH)}
#$(info efuse "CFLAGS:" $(CFLAGS))

# Include the  module.
CHIP_CSRCS+=drivers$(DELIM)chip-src$(DELIM)efuse$(DELIM)efuse.c
#$(info efuse "CSRCS:" $(CHIP_CSRCS))


endif

